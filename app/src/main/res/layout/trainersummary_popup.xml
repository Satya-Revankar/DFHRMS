<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Datewise Attendance History"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Date : "
                android:textColor="@color/black">
            </TextView>
        <TextView
            android:id="@+id/date_trainer_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="12-10-2023"
            android:textColor="@color/greenTextcolor">
        </TextView>

            <ImageView
                android:id="@+id/update_summary_list_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/reload"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/no_values_tv"
            android:layout_width="match_parent"
            android:text="Loading..."
            android:visibility="visible"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content">
        </TextView>

        <ListView
            android:id="@+id/attendance_summary_list"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"></ListView>
        <Button
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="OK"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_corner"
            android:backgroundTint="@color/blue_100"
            android:layout_marginBottom="20dp"
            android:id="@+id/closeDialogButton"/>
    </LinearLayout>
</ScrollView>