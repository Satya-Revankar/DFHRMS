<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"


            >


            <TextView
                android:id="@+id/fromdateondutylabel_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="From Date"
                android:textSize="20dp"

                android:layout_weight="1"

                android:gravity="center"
                android:textColor="@color/greenTextcolor"
                />

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:gravity="center"
                android:text=""
                android:textColor="#20b6e8"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/todateondutylabel_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:text="To Date"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/greenTextcolor"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"

            >


            <TextView
                android:id="@+id/clickfromdateonduty_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Click for Calendar"
                android:textSize="15dp"

                android:layout_weight="1"

                android:gravity="center"
                android:textColor="#c51162"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:gravity="center"
                android:text=""
                android:textColor="#20b6e8"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/clicktodateonduty_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Click for Calendar"

                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#c51162"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="30dp"

            >


            <TextView
                android:id="@+id/locationondutylabel_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="20dp"

                android:layout_weight="1"

                android:gravity="center"
                android:textColor="@color/greenTextcolor"
                />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:gravity="center"
                android:text=""
                android:textColor="#20b6e8"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/typeofondutylabel_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:text="Type of OD"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/greenTextcolor"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >


            <EditText
                android:id="@+id/locationonduty_ET"
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#20b6e8"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                android:gravity="center"
                android:hint="Enter onduty city name"
                android:inputType="text"
                android:maxLength="35"
                android:textColor="#354049"
                android:textSize="16dp" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:gravity="center"
                android:text=""
                android:textColor="#20b6e8"

                android:textStyle="bold" />

            <Spinner
                android:id="@+id/typeofonduty_SP"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:hint="Select"
                android:gravity="center"
                android:layout_weight="1"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFFFFF"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reasonsondutylabel_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reason:"

                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:textColor="@color/greenTextcolor"/>


            <EditText
                android:id="@+id/reasononduty_ET"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:inputType="textMultiLine"
                android:textColor="@color/greenTextcolor"
                android:background="@drawable/shap"/>


            <Button
                android:id="@+id/applyonduty_BT"
                android:layout_width="150dp"
                android:layout_height="76dp"

                android:layout_gravity="center"

                android:layout_marginTop="29dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/openingbalance_button"
                android:gravity="center"
                android:text="Apply Onduty"
                android:textColor="#FFFFFF"
                android:textSize="16dp" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="25dp"
                android:gravity="center"

                />


        </LinearLayout>



    </LinearLayout>

</ScrollView>


