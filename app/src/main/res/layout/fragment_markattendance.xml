   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="160dp"
       android:gravity="center_vertical"
       android:layout_marginTop="60dp"
       android:visibility="visible"
       android:id="@+id/markattendance_signin_layout"
       android:orientation="vertical">

      <ImageView
          android:id="@+id/markattendance_signin_IM"
          android:layout_width="120dp"
          android:layout_height="120dp"
          android:layout_gravity="center"
          android:layout_marginRight="1dp"
          android:textColor="#FFFFFF"
          android:text="SignOut"
          android:textSize="16dp"
          android:gravity="center"
          android:background="@drawable/fingerprint2"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:textColor="@color/greenTextcolor"
          android:text="Punch-IN"
          android:textSize="15dp" />
   </LinearLayout>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="160dp"
       android:gravity="center_vertical"
       android:layout_marginTop="60dp"
       android:visibility="visible"
       android:id="@+id/markattendance_signout_layout"
       android:orientation="vertical">

      <ImageView
          android:id="@+id/markattendance_signout_IM"
          android:layout_width="120dp"
          android:layout_height="120dp"
          android:layout_gravity="center"
          android:layout_marginRight="1dp"
          android:textColor="#FFFFFF"
          android:textSize="16dp"
          android:gravity="center"
          android:background="@drawable/fingerprint2"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:textColor="@color/list_background_pressed"
          android:text="Punch-OUT"
          android:textSize="15dp" />
   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="160dp"
       android:gravity="center_vertical"
       android:layout_marginTop="90dp"
       android:visibility="visible"
       android:orientation="vertical">

      <TextView
