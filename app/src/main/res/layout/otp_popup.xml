<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:gravity="start">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="15dp"
                android:textColor="@color/greenTextcolor"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:gravity="start"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Application No"
                android:textSize="15dp"
                android:textColor="@color/greenTextcolor"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:gravity="start"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile No"
                android:textSize="15dp"
                android:textColor="@color/greenTextcolor"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="10dp"
                android:gravity="start"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/student_name_otp_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Purnima Hanchinal"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:gravity="start"/>
            <TextView
                android:id="@+id/student_appno_otp_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HB23034286"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:gravity="start"/>
            <TextView
                android:id="@+id/student_mobno_otp_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9686616171"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="10dp"
                android:gravity="start"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/ScanQRCode_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/scan_code">
        </ImageView>
        <Button
            android:id="@+id/send_OTP_btn"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_btn_bg"
            android:text="Send OTP"
            android:textColor="@color/greenTextcolor"
            android:layout_marginTop="5dp"
            android:textSize="18dp" />
    </LinearLayout>

    <!--<TextView
        android:id="@+id/Scanned_value_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scanned_value"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="17dp">
    </TextView>
-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the OTP : "
        android:textColor="@color/black"
        android:textStyle="italic"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="17dp">
    </TextView>
    <EditText
        android:id="@+id/OTP_ET"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:hint="Enter OTP"
        android:inputType="number"
        android:maxLength="5"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:background="@drawable/box_border" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/date"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/absentReason_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="8dp"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <Button
        android:id="@+id/submitReason_btn"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_btn_bg"
        android:text="Submit"
        android:layout_weight="1"
        android:textColor="@color/greenTextcolor"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp" />

    </LinearLayout>
</LinearLayout>
