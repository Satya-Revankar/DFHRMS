      <LinearLayout
          android:id="@+id/markattendance_signin_layout"
          android:layout_width="match_parent"
          android:layout_height="160dp"
          android:layout_marginTop="60dp"
          android:gravity="center_vertical"
          android:orientation="vertical"
          android:visibility="visible">

         <ImageView
             android:id="@+id/markattendance_signin_IM"
             android:layout_width="120dp"
             android:layout_height="120dp"
             android:layout_gravity="center"
             android:layout_marginRight="1dp"
             android:background="@drawable/fingerprint2"
             android:gravity="center"
             android:text="SignOut"
             android:textColor="#FFFFFF"
             android:textSize="16dp" />

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center_horizontal"
             android:text="Punch-IN"
             android:textColor="@color/greenTextcolor"
             android:textSize="15dp" />
      </LinearLayout>


      <LinearLayout
          android:id="@+id/markattendance_signout_layout"
          android:layout_width="match_parent"
          android:layout_height="160dp"
          android:layout_marginTop="60dp"
          android:gravity="center_vertical"
          android:orientation="vertical"
          android:visibility="visible">

         <ImageView
             android:id="@+id/markattendance_signout_IM"
             android:layout_width="120dp"
             android:layout_height="120dp"
             android:layout_gravity="center"
             android:layout_marginRight="1dp"
             android:background="@drawable/fingerprint2"
             android:gravity="center"
             android:textColor="#FFFFFF"
             android:textSize="16dp" />

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center_horizontal"
             android:text="Punch-OUT"
             android:textColor="@color/list_background_pressed"
             android:textSize="15dp" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="160dp"
          android:layout_marginTop="90dp"
          android:gravity="center_vertical"
          android:orientation="vertical"
          android:visibility="gone">

         <TextView
             android:id="@+id/caution_note_TV"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center_horizontal"
             android:text=""
             android:textColor="@color/greenTextcolor"
             android:textSize="15dp" />

      </LinearLayout>


      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/greenTextcolor"
          android:textSize="2dp" />

   <LinearLayout
