<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/close_img"
        android:layout_width="30dp"
        android:layout_gravity="end"
        android:layout_height="30dp"
        android:src="@drawable/close" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_gravity="center_horizontal"
        android:text=" UPLOADED IMAGE"
        android:id="@+id/uploadeimg_tv"
        android:textStyle="bold"/>


    <ImageView
        android:id="@+id/popup_imageview"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        android:visibility="gone" /> <!-- Initially hidden -->

    <TextView
        android:id="@+id/no_image_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="No image uploaded"
        android:textSize="15dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">




        <ImageView
            android:id="@+id/headcount_camera"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/image_upload"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Head Count : "
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/greenTextcolor"/>


            <TextView
                android:id="@+id/head_countt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="0"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>

