        &lt;!&ndash; Other SearchView attributes &ndash;&gt;
        <item name="android:editTextStyle">@style/CustomSearchEditText</item>
    </style>

    <style name="CustomSearchEditText" parent="Widget.AppCompat.EditText">
        &lt;!&ndash; Set the text color for the EditText inside the SearchView &ndash;&gt;
        <item name="android:textColor">@color/black</item>
        &lt;!&ndash; Optional: Set hint text color &ndash;&gt;
        <item name="android:textColorHint">@color/black</item>
    </style>-->
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Customize the text color -->
        <item name="android:editTextColor">@color/black</item>
        <!-- Customize the hint text color -->
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="holoSpinner" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/greenTextcolor</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#08FF08</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#FF0000</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#FF0000</item>
    </style>
    <style name="SpinnerDropDownItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:paddingTop">8dp</item> <!-- Adjust the padding as needed -->
        <item name="android:paddingBottom">8dp</item> <!-- Adjust the padding as needed -->
    </style>


</resources>